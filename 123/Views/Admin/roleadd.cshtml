@model Role
<div class="modal fade bd-example-modal-lg" id="role-add" tabindex="-1" role="dialog" aria-labelledby="roleAddModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roleAddModal">Thêm mới Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="role--add">
                    <input type="hidden" name="Id" asp-for="Id">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Mã Chức Năng</label>
                                <select class="form-control" placeholder="Nhập mã chức năng" name="Code" asp-for="Code">
                                    <option value="ADMIN">ADMIN</option>
                                    <option value="USER">USER</option>
                                    <option value="CUSTOMER">CUSTOMER</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="role--add">Lưu</button>
            </div>
        </div>
    </div>
</div>
