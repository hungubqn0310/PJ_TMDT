@model Role
<div class="modal fade" id="role-delete-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="roleDeleteModal-@Model.Id" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="roleDeleteModal-@Model.Id">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post" id="role-@Model.Id-delete">
                    <input type="hidden" name="Id" asp-for="Id">
                    <label>Bạn có chắc chắn muốn xóa Role <strong>@Model.Code</strong> không?</label>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-danger" style="border-radius: 20px;" form="role-@Model.Id-delete">Đồng ý</button>
            </div>
        </div>
    </div>
</div>
