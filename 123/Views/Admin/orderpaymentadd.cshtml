@model OrderPayment

<div class="modal fade bd-example-modal-lg" id="orderpayment-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Thêm mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="order-payment-add-form">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Order</label>
                                <select class="form-control" name="OrderId" asp-for="OrderId" asp-items="@(new SelectList(ViewBag.Orders ?? new List<Order>(), "OrderId", "OrderId"))">
                                    <option value="">Select Order</option>
                                </select>
                                <span asp-validation-for="OrderId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Payment Method</label>
                                <select class="form-control" name="PaymentMethodId" asp-for="PaymentMethodId" asp-items="@(new SelectList(ViewBag.PaymentMethods ?? new List<PaymentMethod>(), "PaymentMethodId", "PaymentMethodName"))">
                                    <option value="">Select Payment Method</option>
                                </select>
                                <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Amount Paid</label>
                                <input type="number" class="form-control" placeholder="Enter Amount Paid" name="AmountPaid" asp-for="AmountPaid" step="0.01" required>
                                <span asp-validation-for="AmountPaid" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Payment Date</label>
                                <input type="datetime-local" class="form-control" name="PaymentDate" asp-for="PaymentDate" required>
                                <span asp-validation-for="PaymentDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                   
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="order-payment-add-form">Lưu</button>
            </div>
        </div>
    </div>
</div>
