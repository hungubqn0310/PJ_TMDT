@model _123.Models.Discount

<div class="modal fade bd-example-modal-lg" id="discount-@Model.DiscountId" tabindex="-1" role="dialog" aria-labelledby="discountModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="discountModalTitle">Update Discount</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="edit" method="post" id="update-discount-@Model.DiscountId">
                    <input type="hidden" name="DiscountId" asp-for="DiscountId">
                    
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Discount Name</label>
                                <input type="text" class="form-control" placeholder="Enter discount name" name="DiscountName" asp-for="DiscountName">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Discount Percent (%)</label>
                                <input type="number" class="form-control" placeholder="Enter discount percent" name="DiscountPercent" asp-for="DiscountPercent" min="0" max="100">
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Start Date</label>
                                <input type="date" class="form-control" name="StartDate" asp-for="StartDate">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>End Date</label>
                                <input type="date" class="form-control" name="EndDate" asp-for="EndDate">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="update-discount-@Model.DiscountId">Lưu</button>
            </div>
        </div>
    </div>
</div>
