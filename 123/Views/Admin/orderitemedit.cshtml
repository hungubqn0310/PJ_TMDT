@model _123.Models.OrderItem

<div class="modal fade bd-example-modal-lg" id="orderitem-@Model.OrderItemId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Order Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" id="order-item-edit-form-@Model.OrderItemId">
                    <!-- Hidden field to hold the OrderItemId -->
                    <input type="hidden" name="OrderItemId" asp-for="OrderItemId">

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Order</label>
                                <select class="form-control" name="OrderId" asp-for="OrderId" asp-items="@(new SelectList(ViewBag.Orders ?? new List<Order>(), "OrderId", "OrderId", Model.OrderId))">
                                    <option value="" disabled>Select an Order</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Product Name</label>
                                <select class="form-control" name="ProductName" asp-for="ProductName" asp-items="@(new SelectList(ViewBag.Products ?? new List<Product>(), "ProductName", "ProductName", Model.ProductName))">
                                    <option value="" disabled>Select a Product</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Quantity</label>
                                <input type="number" class="form-control" placeholder="Enter quantity" name="Quantity" asp-for="Quantity" min="1">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Price</label>
                                <input type="number" class="form-control" placeholder="Enter price" name="Price" asp-for="Price" step="0.01" min="0">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Close</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="order-item-edit-form-@Model.OrderItemId">Save Changes</button>
            </div>
        </div>
    </div>
</div>
