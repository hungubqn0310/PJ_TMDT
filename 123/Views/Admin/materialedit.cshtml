@model Material

<div class="modal fade bd-example-modal-lg" id="material-edit-@Model.MaterialId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Cập nhật thông tin chấ<table> liệu</table></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" id="update--@Model.MaterialId">
                    <input type="hidden" name="MaterialId" asp-for="MaterialId">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Tên nguyên liệu</label>
                                <input type="text" class="form-control" placeholder="Nhập tên chất liệu" name="MaterialName" asp-for="MaterialName">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" placeholder="Nhập mô tả" name="Description" asp-for="Description"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" type="submit" form="update--@Model.MaterialId">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>
