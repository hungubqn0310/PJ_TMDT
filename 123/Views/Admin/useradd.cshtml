@model User
<div class="modal fade bd-example-modal-lg" id="user-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">Tạo Người Dùng Mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form asp-action="add" method="post" id="user--add">
                                            <input type="hidden" name='user_id' asp-for="user_id">
                                            <input type="hidden" name="role_id" value="1">

                                            <div class="row">
                                                <div class="col">
                                                     <div class="form-group">
                                                        <label ><Strong>Tên người dùng</Strong></label>
                                                        <input type="text" class="form-control" placeholder="Enter username" name='username' asp-for="username">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                    <div class="form-group">
                                                        <label><Strong>Email</Strong></label>
                                                        <input type="email" class="form-control" placeholder="Enter email" name="email" asp-for="email">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col">
                                                     <div class="form-group">
                                                        <label ><Strong>Mật Khẩu</Strong></label>
                                                        <input type="text" class="form-control" placeholder="Enter password" name='password' asp-for="password">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col">
                                                     <div class="form-group">
                                                        <label ><Strong>Số điện thoại</Strong></label>
                                                        <input type="text" class="form-control" placeholder="Enter phone number" name="phone_number" asp-for="phone_number">
                                                    </div>
                                                </div>
                                                <div class="col">
                                                     <div class="form-group">
                                                        <label><Strong>Địa chỉ</Strong></label>
                                                        <input type="text" class="form-control" placeholder="Enter address" name="address" asp-for="address"> 
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                                        <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" type="submit" form="user--add">Lưu</button>
                                    </div>
                                    </div>
                                </div>
                            </div>