@model ProductDiscount

<div class="modal fade" id="product-discount-delete-@Model.PdId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@Model.PdId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel-@Model.PdId">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteConfirmed" method="post" id="delete-form-@Model.PdId">
                    <input type="hidden" name="pdId" value="@Model.PdId" />
                    <label>Bạn có chắc chắn muốn xóa sản phẩm **@Model.ProductId** cho đợt khuyến mãi **@Model.DiscountId** không?</label>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-danger" style="border-radius: 20px;" form="delete-form-@Model.PdId">Đồng ý</button>
            </div>
        </div>
    </div>
</div>
