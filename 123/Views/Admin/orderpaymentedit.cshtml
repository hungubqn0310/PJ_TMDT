@model OrderPayment

<div class="modal fade bd-example-modal-lg" id="orderpayment-@Model.OrderPaymentId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Order Payment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post" id="order-payment-edit-form-@Model.OrderPaymentId">

                    <!-- Hidden field for OrderPaymentId -->
                    <input type="hidden" name="OrderPaymentId" asp-for="OrderPaymentId" />

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Order</label>
                                <select class="form-control" name="OrderId" asp-for="OrderId">
                                    <option value="">Select Order</option>
                                    @if (ViewBag.Orders != null)
                                    {
                                        @foreach (var order in ViewBag.Orders)
                                        {
                                            <option value="@order.OrderId" >
                                                @order.OrderId
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option disabled>No Orders Available</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Payment Method</label>
                                <select class="form-control" name="PaymentMethodId" asp-for="PaymentMethodId">
                                    <option value="">Select Payment Method</option>
                                    @if (ViewBag.PaymentMethods != null)
                                    {
                                        @foreach (var method in ViewBag.PaymentMethods)
                                        {
                                            <option value="@method.PaymentMethodId" >
                                                @method.PaymentMethodName
                                            </option>
                                        }
                                    }
                                    else
                                    {
                                        <option disabled>No Payment Methods Available</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Amount Paid</label>
                                <input type="number" class="form-control" placeholder="Enter Amount Paid" name="AmountPaid" asp-for="AmountPaid" step="0.01" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Payment Date</label>
                                <input type="datetime-local" class="form-control" name="PaymentDate" asp-for="PaymentDate" value="@Model.PaymentDate.ToString("yyyy-MM-ddTHH:mm")" required>
                            </div>
                        </div>
                    </div>

                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="order-payment-edit-form-@Model.OrderPaymentId">Lưu</button>
            </div>
        </div>
    </div>
</div>
