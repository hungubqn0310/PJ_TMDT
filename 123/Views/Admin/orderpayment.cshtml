@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model _123.OrderPaymentViewModel

<div class="card mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Th√¥ng tin Order Payments</h6>
  </div>
  <div class="d-flex justify-content-end">
    <button type="button" class="btn btn-outline-success" style="margin: 10px 40px 0;" data-toggle="modal" data-target="#orderpayment-add" 
    data-url="@Url.Action($"Add")">Add </button>
    @* @await Html.PartialAsync("/Views/Admin/orderpaymentadd.cshtml", @Model.OrderPayment) *@
  </div>

  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>Stt</th>
                      <th>Order ID</th>
                      <th>Payment Method ID</th>
                      <th>Amount Paid</th>
                      <th>Payment Date</th>
                      <th>Status</th>
                  </tr>
              </thead>
              <tbody>
                @for (int i = 0; i < Model.Order_Payments.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td> <!-- Index -->
                        <td>@Model.Order_Payments[i].order_id</td>
                        <td>@Model.Order_Payments[i].payment_method_id</td>
                        <td>@Model.Order_Payments[i].amount_paid.ToString("C2")</td>
                        <td>@Model.Order_Payments[i].payment_date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#orderpayment-@Model.Order_Payments[i].order_payment_id" data-url="@Url.Action($"Edit/{@Model.Order_Payments[i].order_payment_id}")">
                                <i class="material-icons" style="font-size: 14px">border_color</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/orderpaymentedit.cshtml", @Model.Order_Payments[i]) *@
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#orderpayment-delete-@Model.Order_Payments[i].order_payment_id" data-url="@Url.Action($"Delete/{@Model.Order_Payments[i].order_payment_id}")">
                                <i class="material-icons" style="font-size: 14px">delete</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/orderpaymentdelete.cshtml", @Model.Order_Payments[i]) *@
                        </td>
                    </tr>
                }
              </tbody>
          </table>
      </div>
  </div>
</div>
