@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model _123.DiscountViewModel

<div class="card mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin giảm giá</h6>
    </div>
    <div class="d-flex justify-content-end">  
        <button type="button" class="btn btn-outline-success" style="margin: 10px 40px 0;" data-toggle="modal" data-target="#discount-add" 
        data-url="@Url.Action("Add")">Thêm mới</button>
        @await Html.PartialAsync("/Views/Admin/discountadd.cshtml", @Model.Discount)
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Tên Giảm Giá</th>
                        <th>Phần Trăm Giảm</th>
                        <th>Ngày Bắt Đầu</th>
                        <th>Ngày Kết Thúc</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Discounts.Count(); i++)
                    {
                        <tr>
                            <td>@(i + 1)</td> <!-- Index -->
                            <td>@Model.Discounts[i].DiscountName</td>
                            <td>@Model.Discounts[i].DiscountPercent%</td>
                            <td>@Model.Discounts[i].StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@Model.Discounts[i].EndDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <!-- Edit Discount -->
                                <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#discount-@Model.Discounts[i].DiscountId" data-url="@Url.Action("EditDiscount", new { id = @Model.Discounts[i].DiscountId })">
                                    <i class="material-icons" style="font-size: 14px">border_color</i>
                                </button>
                                @await Html.PartialAsync("/Views/Admin/discountedit.cshtml", @Model.Discounts[i])
                                
                                <!-- Delete Discount -->
                                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#discount-delete-@Model.Discounts[i].DiscountId" data-url="@Url.Action("DeleteDiscount", new { id = @Model.Discounts[i].DiscountId })">
                                    <i class="material-icons" style="font-size: 14px">delete</i>
                                </button>
                                @await Html.PartialAsync("/Views/Admin/discountdelete.cshtml", @Model.Discounts[i])
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
