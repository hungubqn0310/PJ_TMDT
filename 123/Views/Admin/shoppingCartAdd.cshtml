@model ShoppingCart

<div class="modal fade bd-example-modal-lg" id="cart-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Tạo Giỏ Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="cart-add-form">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Người dùng</label>
                                <select class="form-control" name="UserId" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users ?? new List<User>(), "user_id", "username"))" required>
                                    <option value="" selected disabled>Chọn người dùng</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Sản phẩm</label>
                                <select class="form-control" name="ProductId" asp-for="ProductId" asp-items="@(new SelectList(ViewBag.Products ?? new List<Product>(), "ProductId", "ProductName"))" required>
                                    <option value="" selected disabled>Chọn sản phẩm</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input type="number" class="form-control" placeholder="Nhập số lượng" name="Quantity" asp-for="Quantity" min="1" required title="Số lượng phải lớn hơn 0">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Thời gian thêm</label>
                                <input type="datetime-local" class="form-control" name="AddedAt" asp-for="AddedAt" required>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="cart-add-form">Lưu</button>
            </div>
        </div>
    </div>
</div>