@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model _123.ShoppingCartViewModel

<div class="card mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Th√¥ng tin Shopping Cart</h6>
  </div>
  <div class="d-flex justify-content-end">  
    <button type="button" class="btn btn-outline-success" style="margin: 10px 40px 0;" data-toggle="modal" data-target="#cart-add" 
    data-url="@Url.Action($"Add")">Add</button>
    @* @await Html.PartialAsync("/Views/Admin/shoppingCartAdd.cshtml", Model) *@
  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>Stt</th>
                      <th>User ID</th>
                      <th>Product ID</th>
                      <th>Quantity</th>
                      <th>Added At</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                @for (int i = 0; i < Model.Shopping_Carts.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td> <!-- Index -->
                        <td>@Model.Shopping_Carts[i].user_id</td>
                        <td>@Model.Shopping_Carts[i].product_id</td>
                        <td>@Model.Shopping_Carts[i].quantity</td>
                        <td>@Model.Shopping_Carts[i].added_at.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#cart-edit-@Model.Shopping_Carts[i].cart_id" data-url="@Url.Action($"Edit/{@Model.Shopping_Carts[i].cart_id}")">
                                <i class="material-icons" style="font-size: 14px">border_color</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/cartedit.cshtml", @Model.Shopping_Carts[i]) *@
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#cart-delete-@Model.Shopping_Carts[i].cart_id" data-url="@Url.Action($"Delete/{@Model.Shopping_Carts[i].cart_id}")">
                                <i class="material-icons" style="font-size: 14px">delete</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/cartdelete.cshtml", @Model.Shopping_Carts[i]) *@
                        </td>
                    </tr>
                }
              </tbody>
          </table>
      </div>
  </div>
</div>
