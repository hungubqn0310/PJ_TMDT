@model Product
<div class="modal fade bd-example-modal-lg" id="product-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create Product</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="product-add-form" enctype="multipart/form-data">
                    @* <input type="hidden" name="ProductId" asp-for="ProductId"> *@
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Mã sản phẩm</label>
                                <input type="text" class="form-control" placeholder="Nhập mã sản phẩm" name="ProductId" asp-for="ProductId">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <input type="text" class="form-control" placeholder="Nhập tên sản phẩm" name="ProductName" asp-for="ProductName">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Giá</label>
                                <input type="number" class="form-control" placeholder="Nhập giá sản phẩm" name="Price" asp-for="Price" step="0.01">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Mô tả</label>
                                <textarea class="form-control" placeholder="Nhập mô tả sản phẩm" name="Description" asp-for="Description"></textarea>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Thể loại</label>
                                <select class="form-control" name="CategoryId" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories ?? new List<Category>(), "CategoryId", "CategoryName"))">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Hình ảnh</label>
                                <input type="file" accept="image/*" class="form-control" placeholder="Nhập URL hình ảnh" name="ImageUrl" asp-for="ImageUrl">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Chất liệu</label>
                                <select class="form-control" name="MaterialId" asp-for="MaterialId" asp-items="@(new SelectList(ViewBag.Materials ?? new List<Material>(), "MaterialId", "MaterialName"))">
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="product-add-form">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</div>
