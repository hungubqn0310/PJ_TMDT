@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model _123.OrderItemViewModel

<div class="card mb-4">
  <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Th√¥ng tin Order Items</h6>
  </div>
  <div class="d-flex justify-content-end">
    <button type="button" class="btn btn-outline-success" style="margin: 10px 40px 0;" data-toggle="modal" data-target="#orderitem-add" 
    data-url="@Url.Action($"Add")">Add </button>
    @* @await Html.PartialAsync("/Views/Admin/orderitemadd.cshtml", @Model.Order_Items) *@
  </div>

  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>Stt</th>
                      <th>Order ID</th>
                      <th>Product Name</th>
                      <th>Quantity</th>
                      <th>Price</th>
                  </tr>
              </thead>
              <tbody>
                @for (int i = 0; i < Model.Order_Items.Count(); i++)
                {
                    <tr>
                        <td>@(i + 1)</td> <!-- Index -->
                        <td>@Model.Order_Items[i].order_id</td>
                        <td>@Model.Order_Items[i].product_name</td>
                        <td>@Model.Order_Items[i].quantity</td>
                        <td>@Model.Order_Items[i].price.ToString("C2")</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#orderitem-@Model.Order_Items[i].order_item_id" data-url="@Url.Action($"Edit/{@Model.Order_Items[i].order_item_id}")">
                                <i class="material-icons" style="font-size: 14px">border_color</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/orderitemedit.cshtml", @Model.Order_Items[i]) *@
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#orderitem-delete-@Model.Order_Items[i].order_item_id" data-url="@Url.Action($"Delete/{@Model.Order_Items[i].order_item_id}")">
                                <i class="material-icons" style="font-size: 14px">delete</i>
                            </button>
                            @* @await Html.PartialAsync("/Views/Admin/orderitemdelete.cshtml", @Model.Order_Items[i]) *@
                        </td>
                    </tr>
                }
              </tbody>
          </table>
      </div>
  </div>
</div>
