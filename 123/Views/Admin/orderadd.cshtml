@model _123.Models.Order

<div class="modal fade bd-example-modal-lg" id="order-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Tạo Đơn Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" method="post" id="order-add-form">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Người dùng</label>
                                <select class="form-control" name="UserId" asp-for="UserId" asp-items="@(new SelectList(ViewBag.Users ?? new List<User>(), "user_id", "username"))" required>
                                    <option value="" selected disabled>Chọn người dùng</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Ngày Đặt Hàng</label>
                                <input type="datetime-local" class="form-control" name="OrderDate" asp-for="OrderDate" required>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Trạng Thái</label>
                                <select class="form-control" name="Status" asp-for="Status" required>
                                    <option value="" selected disabled>Chọn trạng thái</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Canceled">Canceled</option>
                                    <option value="Completed">Completed</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Tổng Số Tiền</label>
                                <input type="number" class="form-control" placeholder="Nhập tổng số tiền" name="TotalAmount" asp-for="TotalAmount" step="0.01" min="0" required title="Tổng số tiền phải lớn hơn hoặc bằng 0">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" style="border-radius: 20px;">Đóng</button>
                <button type="submit" class="btn btn-outline-primary" style="border-radius: 20px;" form="order-add-form">Lưu</button>
            </div>
        </div>
    </div>
</div>